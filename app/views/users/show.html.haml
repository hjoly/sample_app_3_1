%table.profile{ :summary => "Profile information" }
  %tr
    %td.main
      %h1
        = gravatar_for @user 
        = @user.name 
      = link_to "#{user_path}.rss" do
        = image_tag "feed-icon-14x14.png", { :alt => "Feed-icon-14x14" }
        RSS feed

      = render 'follow_form' if signed_in? 
      - unless @user.microposts.empty? 
        %table.microposts{ :summary => "User microposts" }
          = render @microposts 
        = will_paginate @microposts 
    %td.sidebar.round
      %strong Name
      = @user.name 
      %br
      %strong URL 
      = link_to user_path(@user), @user 
      %br
      %strong Microposts 
      = @user.microposts.count 
      = render 'shared/stats' 
